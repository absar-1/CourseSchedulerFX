                    <!-- Admins Card - Clickable for User Management -->
                    <VBox fx:id="adminCard" styleClass="dashboard-card" prefWidth="200" prefHeight="180" onMouseClicked="#handleAdminCardClick">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20" />
                        </padding>
                        <Label text="ðŸ”" styleClass="card-icon" />
