<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.courseschedulerfx.controllers.ScheduleManagementController"
            prefHeight="600.0" prefWidth="900.0"
            styleClass="schedule-mgmt-border-pane">

    <!-- Top Section with Header -->
    <top>
        <HBox styleClass="schedule-mgmt-header" alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets top="10" left="20" right="20" bottom="10" />
            </padding>
            <VBox spacing="2" HBox.hgrow="ALWAYS">
                <Label text="ðŸ“… Schedule Management" styleClass="page-title" />
                <Label text="Manage class schedules" styleClass="page-subtitle" />
            </VBox>

            <!-- Search and Filter Bar in Header -->
            <HBox spacing="5" alignment="CENTER_RIGHT" styleClass="header-search-bar">
                <TextField fx:id="searchField" promptText="ðŸ” Search by course, teacher, batch, room, day..." styleClass="search-field" prefWidth="350" />

                <!-- Filter by Category -->
                <ComboBox fx:id="filterCombo" styleClass="filter-combo-box" prefWidth="120" promptText="Filter..." />

                <!-- Filter Value -->
                <ComboBox fx:id="filterValueCombo" styleClass="filter-combo-box" prefWidth="120" promptText="Select..." />

                <Button text="Refresh" styleClass="refresh-btn" onAction="#handleRefresh" />
            </HBox>

            <Button fx:id="addScheduleBtn" text="+ Add" styleClass="add-btn" onAction="#handleAddSchedule" />
        </HBox>
    </top>

    <!-- Center Section with Dynamic Content -->
    <center>
        <StackPane styleClass="schedule-mgmt-main">
            <VBox spacing="10" styleClass="schedule-mgmt-main">
                <padding>
                    <Insets top="10" left="30" right="30" bottom="10" />
                </padding>

                <!-- Schedule Table -->
                <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                    <TableView fx:id="scheduleTable" styleClass="schedule-table" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" minWidth="40" />
                            <TableColumn fx:id="dayColumn" text="Day" minWidth="70" />
                            <TableColumn fx:id="timeColumn" text="Time Slot" minWidth="120" />
                            <TableColumn fx:id="courseColumn" text="Course" minWidth="120" />
                            <TableColumn fx:id="teacherColumn" text="Teacher" minWidth="110" />
                            <TableColumn fx:id="batchColumn" text="Batch" minWidth="90" />
                            <TableColumn fx:id="roomColumn" text="Room" minWidth="70" />
                            <TableColumn fx:id="actionsColumn" text="Actions" minWidth="130" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <placeholder>
                            <Label text="No schedules found" styleClass="table-placeholder" />
                        </placeholder>
                    </TableView>
                </VBox>
            </VBox>

            <!-- Loading Indicator Overlay with White Background -->
            <VBox fx:id="loadingOverlay" styleClass="loading-overlay" alignment="CENTER" spacing="15" visible="false" managed="false">
                <ProgressIndicator fx:id="loadingIndicator" prefWidth="60" prefHeight="60" />
                <Label text="Loading..." styleClass="loading-label" />
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom Section with Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="8" left="30" right="30" bottom="8" />
            </padding>
            <Label fx:id="statusLabel" text="Ready" styleClass="status-text" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="countLabel" text="Total: 0 schedules" styleClass="count-text" />
        </HBox>
    </bottom>
</BorderPane>

