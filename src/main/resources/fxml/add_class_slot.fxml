<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.courseschedulerfx.controllers.AddClassSlotController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="anchor-pane"
            stylesheets="@../css/class_slot_form.css">

    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               styleClass="stack-pane">

        <VBox spacing="8" styleClass="form-card">
            <padding>
                <Insets top="30" left="40" right="40" bottom="30" />
            </padding>

            <!-- Title -->
            <Label text="Add New Time Slot" styleClass="form-title" />

            <!-- Start Time Field -->
            <VBox spacing="3">
                <Label text="Start Time" styleClass="field-label" />
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Spinner fx:id="startHourSpinner" prefWidth="80" />
                    <Label text=":" styleClass="time-separator" />
                    <Spinner fx:id="startMinuteSpinner" prefWidth="80" />
                </HBox>
            </VBox>

            <!-- End Time Field -->
            <VBox spacing="3">
                <Label text="End Time" styleClass="field-label" />
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Spinner fx:id="endHourSpinner" prefWidth="80" />
                    <Label text=":" styleClass="time-separator" />
                    <Spinner fx:id="endMinuteSpinner" prefWidth="80" />
                </HBox>
            </VBox>

            <!-- Duration Display (Read-only) -->
            <VBox spacing="3">
                <Label text="Duration" styleClass="field-label" />
                <TextField fx:id="durationField" promptText="Duration will be calculated" styleClass="text-field readonly-field" editable="false" />
            </VBox>

            <!-- Message Label -->
            <Label fx:id="messageLabel" text="" styleClass="message-label" wrapText="true" />

            <!-- Buttons -->
            <HBox spacing="12" alignment="CENTER">
                <padding>
                    <Insets top="15" />
                </padding>
                <Button fx:id="saveBtn" text="Save" styleClass="btn-primary" onAction="#handleSave" />
                <Button fx:id="cancelBtn" text="Cancel" styleClass="btn-secondary" onAction="#handleCancel" />
            </HBox>
        </VBox>
    </StackPane>
</AnchorPane>
