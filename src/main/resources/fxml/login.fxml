<AnchorPane fx:id="loginAnchor" prefHeight="600.0" prefWidth="800.0" styleClass="anchor-pane" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.courseschedulerfx.controllers.LoginController">
   <children>
      <StackPane styleClass="stack-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" styleClass="vbox" spacing="20.0" maxHeight="500" maxWidth="400">
               <children>
                  <Label fx:id="welcomeLabel" text="Welcome to Course Scheduler" />
                  <ImageView fx:id="loginImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view" />
                  <Label text="ðŸ“§ Enter Email" styleClass="email-label" />
                  <TextField fx:id="emailTextField" promptText="Email Address" />
                  <Label text="ðŸ”’ Enter Password" styleClass="password-label" />
                  <PasswordField fx:id="passwordTextField" promptText="Password" />
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonAction" text="Login" />
                  <Label fx:id="errorLabel" />
               </children>
            </VBox>
         </children>
      </StackPane>
      <StackPane fx:id="loaderOverlay" styleClass="loader-overlay" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <ProgressIndicator fx:id="loader" maxHeight="80.0" maxWidth="80.0" styleClass="loader-spinner" />
                  <Label text="Loading Dashboard..." styleClass="loader-text" />
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
