<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>

<HBox minHeight="70.0" prefHeight="70.0" minWidth="600.0" styleClass="header-container" stylesheets="@../css/header.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.courseschedulerfx.controllers.HeaderController">
   <children>
      <HBox alignment="CENTER" styleClass="header-logo-section" HBox.hgrow="NEVER">
         <children>
            <ImageView fx:id="logoIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="logo-icon" onMouseClicked="#onLogoClick" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header-nav-section" HBox.hgrow="ALWAYS">
         <children>
            <Label styleClass="nav-label" text="Home" onMouseClicked="#onHomeClick" />
            <Label styleClass="nav-label" text="Dashboard" onMouseClicked="#onDashboardClick" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" minWidth="250.0" styleClass="header-user-section" HBox.hgrow="NEVER">
         <children>
            <Label fx:id="userLabel" styleClass="user-label" text="Welcome Admin" minWidth="150.0" />
            <ImageView fx:id="logoutIcon" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="logout-icon" onMouseClicked="#onLogoutClick" />
         </children>
      </HBox>
   </children>
</HBox>
